<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.StartFragment4"
    android:background="@drawable/background"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/margin_main1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="15dp"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/margin_main2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_end="15dp"
                />

            <TextView
                style="@style/zagalovok1"
                android:id="@+id/greatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/margin_main1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="60dp"
                android:text="Здравствуйте! Рады приветствовать вас в нашем приложении. Давайте познакомимся:"
                />

            <TextView
                style="@style/zagalovok1"
                android:id="@+id/quetion_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/margin_main1"
                app:layout_constraintTop_toBottomOf="@id/greatings"
                android:layout_marginTop="40dp"
                android:text="Как вас зовут?"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/name_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/margin_main1"
                app:layout_constraintTop_toBottomOf="@id/quetion_name"
                app:layout_constraintEnd_toEndOf="@id/margin_main2"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:src="@drawable/box"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <EditText
                    style="@style/hint1"
                    android:id="@+id/getName"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@id/name"
                    app:layout_constraintTop_toTopOf="@id/name"
                    app:layout_constraintBottom_toBottomOf="@id/name"
                    app:layout_constraintEnd_toEndOf="@id/name"
                    android:hint="Введите ваше имя"
                    android:background="@android:color/transparent"
                    android:paddingStart="10dp"
                    android:inputType="textCapSentences"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                style="@style/zagalovok1"
                android:id="@+id/chooseGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/margin_main1"
                app:layout_constraintTop_toBottomOf="@id/name_box"
                android:layout_marginTop="35dp"
                android:text="Выберите ваш пол"
                />

            <RadioGroup
                android:id="@+id/radioGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/chooseGender"
                app:layout_constraintStart_toEndOf="@id/margin_main1"
                android:layout_marginTop="17dp"
                android:orientation="horizontal">

                <RadioButton
                    style="@style/zagalovok1"
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:text="Муж"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton
                    style="@style/zagalovok1"
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Жен"
                    android:onClick="onRadioButtonClicked"/>

            </RadioGroup>

            <TextView
                style="@style/zagalovok1"
                android:id="@+id/quetion_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/radioGender"
                app:layout_constraintStart_toEndOf="@id/margin_main1"
                android:layout_marginTop="25dp"
                android:text="Сколько вам лет?"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/numPick"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/margin_main1"
                app:layout_constraintTop_toBottomOf="@id/quetion_years"
                app:layout_constraintEnd_toEndOf="@id/quetion_years"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/numPick_box"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/box"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <NumberPicker
                    android:id="@+id/numberPicker"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="@id/numPick_box"
                    app:layout_constraintTop_toTopOf="@id/numPick_box"
                    app:layout_constraintBottom_toBottomOf="@id/numPick_box"
                    app:layout_constraintEnd_toEndOf="@id/numPick_box"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>