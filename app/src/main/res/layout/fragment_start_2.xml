<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.StartFragment2"
    android:background="@drawable/background"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/margin_main1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="15dp"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/margin_main2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_end="15dp"
                />

            <Button
                style="@style/zagalovok1"
                android:id="@+id/skipStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/margin_main2"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/skip"
                android:background="@android:color/transparent"
                android:textColor="@color/textcolor_purple"
                android:layout_marginTop="30dp"
                />

            <ImageView
                android:id="@+id/photoSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/skipStart"
                app:layout_constraintStart_toStartOf="@id/margin_main1"
                app:layout_constraintEnd_toEndOf="@id/margin_main2"
                android:layout_marginTop="30dp"
                android:src="@drawable/start_second"
                android:background="@android:color/transparent"
                />

            <TextView
                style="@style/zagalovok1"
                android:id="@+id/textSecond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/photoSecond"
                app:layout_constraintStart_toStartOf="@id/margin_main1"
                app:layout_constraintEnd_toEndOf="@id/margin_main2"
                android:layout_marginTop="80dp"
                android:text="Не забывайте принимать таблетки и следите за курсами"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="@id/margin_main1"
                app:layout_constraintTop_toBottomOf="@id/textSecond"
                app:layout_constraintEnd_toStartOf="@id/margin_main2"
                android:layout_marginTop="140dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                >

                <ImageButton
                    android:id="@+id/nextBox"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/button"
                    android:background="@android:color/transparent"
                    />

                <TextView
                    style="@style/zagalovok1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/nextBox"
                    app:layout_constraintBottom_toBottomOf="@id/nextBox"
                    app:layout_constraintStart_toStartOf="@id/nextBox"
                    app:layout_constraintEnd_toEndOf="@id/nextBox"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>