<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.start.StartFragment2"
    android:background="@android:color/transparent"
    tools:background="@color/white"
    >

    <ImageView
        android:id="@+id/photoSecond"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/screen2"
        android:background="@android:color/transparent"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="true"
        />

    <TextView
        style="@style/zagalovok1"
        android:id="@+id/textSecond"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/photoSecond"
        app:layout_constraintStart_toStartOf="@id/photoSecond"
        app:layout_constraintEnd_toEndOf="@id/photoSecond"
        android:layout_marginTop="10dp"
        android:text="Не забывайте принимать таблетки и следите за курсами"
        />

</androidx.constraintlayout.widget.ConstraintLayout>