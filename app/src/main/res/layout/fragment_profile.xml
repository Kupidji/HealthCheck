<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.profileFragment"
    android:background="@drawable/background"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/margin_main1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="15dp"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/margin_main2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_end="15dp"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/margin_main3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.34" />

            <ImageButton
                android:id="@+id/wentBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/margin_main1"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/arrow_left"
                android:background="@android:color/transparent"
                android:layout_marginTop="30dp"
                />

            <TextView
                style="@style/zagalovok1"
                android:id="@+id/profileText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/margin_main1"
                app:layout_constraintEnd_toEndOf="@id/margin_main2"
                app:layout_constraintTop_toTopOf="@id/wentBack"
                app:layout_constraintBottom_toBottomOf="@id/wentBack"
                android:text="@string/profile"
                />
            
            <TextView
                style="@style/zagalovok1"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/margin_main1"
                app:layout_constraintTop_toTopOf="@id/nameBox"
                app:layout_constraintBottom_toBottomOf="@id/nameBox"
                android:text="@string/name"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nameBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/margin_main3"
                app:layout_constraintEnd_toEndOf="@id/margin_main2"
                app:layout_constraintTop_toBottomOf="@id/profileText"
                android:layout_marginTop="40dp">

                <ImageView
                    android:id="@+id/nameImage"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/box"
                    />

                <EditText
                    style="@style/hint1"
                    android:id="@+id/nameText"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@id/nameImage"
                    app:layout_constraintTop_toTopOf="@id/nameImage"
                    app:layout_constraintBottom_toBottomOf="@id/nameImage"
                    app:layout_constraintEnd_toEndOf="@id/nameImage"
                    android:hint="@string/input_name"
                    android:background="@android:color/transparent"
                    android:inputType="textCapSentences"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                style="@style/zagalovok1"
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/margin_main1"
                app:layout_constraintTop_toTopOf="@id/ageBox"
                app:layout_constraintBottom_toBottomOf="@id/ageBox"
                android:text="@string/age"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ageBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="@id/margin_main3"
                app:layout_constraintEnd_toEndOf="@id/margin_main2"
                app:layout_constraintTop_toBottomOf="@id/nameBox"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/ageImage"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/box"
                    />

                <EditText
                    style="@style/hint1"
                    android:id="@+id/ageText"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@id/ageImage"
                    app:layout_constraintTop_toTopOf="@id/ageImage"
                    app:layout_constraintBottom_toBottomOf="@id/ageImage"
                    app:layout_constraintEnd_toEndOf="@id/ageImage"
                    android:hint="@string/input_age"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                style="@style/zagalovok1"
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/margin_main1"
                app:layout_constraintTop_toTopOf="@id/heightBox"
                app:layout_constraintBottom_toBottomOf="@id/heightBox"
                android:text="@string/height"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/heightBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="@id/margin_main3"
                app:layout_constraintEnd_toEndOf="@id/margin_main2"
                app:layout_constraintTop_toBottomOf="@id/ageBox"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:id="@+id/heightImage"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/box"
                    />

                <EditText
                    style="@style/hint1"
                    android:id="@+id/heightText"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@id/heightImage"
                    app:layout_constraintTop_toTopOf="@id/heightImage"
                    app:layout_constraintBottom_toBottomOf="@id/heightImage"
                    app:layout_constraintEnd_toEndOf="@id/heightImage"
                    android:hint="@string/input_height"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                style="@style/zagalovok1"
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/margin_main1"
                app:layout_constraintTop_toTopOf="@id/radioGender"
                app:layout_constraintBottom_toBottomOf="@id/radioGender"
                android:text="@string/gender"
                />

            <RadioGroup
                android:id="@+id/radioGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/margin_main3"
                app:layout_constraintTop_toBottomOf="@id/heightBox"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RadioButton
                    style="@style/zagalovok2"
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:text="@string/he" />

                <RadioButton
                    style="@style/zagalovok2"
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="@string/she"/>

            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirm_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        >

        <ImageView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/button"
            />

        <TextView
            style="@style/zagalovok1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/confirm"
            app:layout_constraintTop_toTopOf="@id/confirm"
            app:layout_constraintStart_toStartOf="@id/confirm"
            app:layout_constraintEnd_toEndOf="@id/confirm"
            android:text="@string/save"
            android:textColor="@color/white"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>