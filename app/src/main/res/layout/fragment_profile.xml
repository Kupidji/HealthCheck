<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.profileFragment"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/wentBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/arrow_left"
        android:background="@android:color/transparent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        />

    <TextView
        style="@style/zagalovok1"
        android:id="@+id/profileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/wentBack"
        app:layout_constraintEnd_toStartOf="@id/confirm"
        app:layout_constraintTop_toTopOf="@id/wentBack"
        app:layout_constraintBottom_toBottomOf="@id/wentBack"
        android:text="@string/profile"
        android:textColor="@color/textcolor_black"
        />

    <ImageButton
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/confirm"
        android:background="@android:color/transparent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:src="@drawable/profile_image_big"
        android:background="@android:color/transparent"
        />

    <ImageView
        android:id="@+id/boxName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        android:layout_marginTop="26dp"
        android:src="@drawable/medicinies_nutrition_box"
        />

    <EditText
        style="@style/tint1"
        android:id="@+id/nameText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/boxName"
        app:layout_constraintTop_toTopOf="@id/boxName"
        app:layout_constraintBottom_toBottomOf="@id/boxName"
        app:layout_constraintEnd_toEndOf="@id/boxName"
        android:hint="@string/name"
        android:textColor="@color/tint_color"
        android:background="@android:color/transparent"
        android:paddingStart="10dp"
        />

    <ImageView
        android:id="@+id/boxAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boxName"
        android:layout_marginTop="16dp"
        android:src="@drawable/medicinies_nutrition_box"
        />

    <EditText
        style="@style/tint1"
        android:id="@+id/ageText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/boxAge"
        app:layout_constraintTop_toTopOf="@id/boxAge"
        app:layout_constraintBottom_toBottomOf="@id/boxAge"
        app:layout_constraintEnd_toEndOf="@id/boxAge"
        android:hint="@string/age"
        android:textColor="@color/tint_color"
        android:background="@android:color/transparent"
        android:paddingStart="10dp"
        />

    <ImageView
        android:id="@+id/boxHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/boxAge"
        app:layout_constraintTop_toBottomOf="@id/boxAge"
        android:layout_marginTop="16dp"
        android:src="@drawable/height_weight_box"
        />

    <EditText
        style="@style/tint1"
        android:id="@+id/heightText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/boxHeight"
        app:layout_constraintTop_toTopOf="@id/boxHeight"
        app:layout_constraintBottom_toBottomOf="@id/boxHeight"
        app:layout_constraintEnd_toEndOf="@id/boxHeight"
        android:hint="@string/height"
        android:textColor="@color/tint_color"
        android:background="@android:color/transparent"
        android:paddingStart="10dp"
        />

    <ImageView
        android:id="@+id/boxWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/boxAge"
        app:layout_constraintTop_toBottomOf="@id/boxAge"
        android:layout_marginTop="16dp"
        android:src="@drawable/height_weight_box"
        />

    <EditText
        style="@style/tint1"
        android:id="@+id/weightText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/boxWeight"
        app:layout_constraintTop_toTopOf="@id/boxWeight"
        app:layout_constraintBottom_toBottomOf="@id/boxWeight"
        app:layout_constraintEnd_toEndOf="@id/boxWeight"
        android:hint="@string/weight"
        android:textColor="@color/tint_color"
        android:background="@android:color/transparent"
        android:paddingStart="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>